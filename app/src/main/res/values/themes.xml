<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/support2</item>
        <item name="colorSecondary">@color/support1</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/support1</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:backgroundTint">@color/background</item>

        <!-- Text styles -->
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textColorPrimary">@color/secondary</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:disabledAlpha">0.3</item>

        <item name="fontFamily">@font/montserrat</item>
        <item name="font">@font/montserrat</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="Widget.TopAppBar.MyApplication" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/secondary</item>
        <item name="subtitleTextColor">@color/secondary</item>
        <item name="titleTextStyle">@font/montserrat_bold</item>
        <item name="subtitleTextStyle">@font/montserrat_bold</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/secondary</item>
        <item name="colorOnSecondaryContainer">@color/support2</item>
        <item name="itemIconTint">@color/support1</item>
        <item name="itemTextColor">@color/support1</item>
        <item name="itemActiveIndicatorStyle">@color/support1</item>
        <item name="colorSurface">@color/support2</item>
        <item name="colorOnSurfaceVariant">@color/support2</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/support1</item>
        <item name="tabSelectedTextColor">@color/support1</item>
        <item name="tabTextColor">@color/secondary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/background</item>
    </style>
</resources>
